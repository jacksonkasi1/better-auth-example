{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",                          /* Specify ECMAScript target version */
    "module": "ESNext",                          /* Change this to ESNext for ES Module support */
    "rootDir": "./src",                          /* Root directory of input files */
    "outDir": "./dist",                          /* Output directory for compiled files */
    "esModuleInterop": true,                     /* Enable interoperability between CommonJS and ES Modules */
    "strict": true,                              /* Enable all strict type-checking options */
    "skipLibCheck": true,                        /* Skip type checking of all declaration files */
    "forceConsistentCasingInFileNames": true,    /* Ensure consistent casing in file names */

    /* Module Resolution */
    "moduleResolution": "node",                  /* Use Node.js module resolution strategy */
    "resolveJsonModule": true,                   /* Allow importing JSON modules */

    /* Type Definitions */
    "types": ["node"],                           /* Include Node.js type definitions */

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/drizzle.config.ts"],
  "exclude": ["node_modules", "dist"]
}
